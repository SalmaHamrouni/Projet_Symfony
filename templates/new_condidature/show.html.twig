{% extends 'home/base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
<div class="container">
    <h2>My Profile</h2>

    <table class="table">
        <tbody>
            <tr>
            <tr>
                <th>ID</th>
                <td>{{ app.user.id }}</td>
            </tr>
                <th>Name</th>
                <td>{{ app.user.name }}</td>
            </tr>
            <tr>
                <th>CIN</th>
                <td>{{ app.user.cin }}</td>
